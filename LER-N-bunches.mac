# Macro file for example B1
# To be run preferably in batch, without graphics:
# % exampleB1 run2.mac
#/run/numberOfWorkers 4
/run/initialize
/control/verbose 0
/run/verbose 0

/control/alias x_size_mm 6.
#/control/alias x_step_mm x_size_mm/24562.
#/control/alias x_start_mm -x_size_mm/2. 
#/control/alias x_end_mm x_size_mm/2. 
/control/alias x_step_mm 4.07132969628e-5
/control/alias x_start_mm -3. 
/control/alias x_end_mm 3.

# critial energy:
/gun/energy 4.458 keV
/control/loop LER-1-bunch.mac x_mm {x_start_mm} {x_end_mm} {x_step_mm}

