# Macro file for example B1
# To be run preferably in batch, without graphics:
# % exampleB1 run2.mac
#/run/numberOfWorkers 4
/run/initialize
/control/verbose 0
/run/verbose 0
#/tracking/verbose 0

/control/alias x_size_m  14.025e-3
/control/alias x_start_m -7.0125e-3
/control/alias x_end_m    7.0125e-3
# 187 steps is appropriate for 75 um in 14.025 mm
/control/alias x_step_m 75.e-6

# critial energy:
/gun/energy 4.458 keV
/control/loop LER-1-bunch.mac x_m {x_start_m} {x_end_m} {x_step_m}

